@model IEnumerable<ProjetoAgencia.Models.Passageiros>

@{
    ViewData["Title"] = "Index";
}

<h1>Passageiros</h1>

<p>
    <a class="a" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePassageiros)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePassageiros)
            </td>
            <td>
                    <a class="a" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="a" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a class="a" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
