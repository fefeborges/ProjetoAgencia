@model IEnumerable<ProjetoAgencia.Models.Cadastro>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estadia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passageiros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atracoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeContato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.NomeDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estadia.NomeEstadia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passageiros.NomePassageiros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transporte.NomeTransporte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atracoes.NomeAtracoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeContato)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
